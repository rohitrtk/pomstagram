{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "strict": false,
    "outDir": "./dist",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "removeComments": true,
    "esModuleInterop": true,
  }
}